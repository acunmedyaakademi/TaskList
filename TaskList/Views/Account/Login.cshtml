@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>İş Takip Sistemi</title>
    <!-- CSS files -->
    <link href="/dist/css/tabler.min.css?1674944402" rel="stylesheet" />
    <link href="/dist/css/tabler-flags.min.css?1674944402" rel="stylesheet" />
    <link href="/dist/css/tabler-payments.min.css?1674944402" rel="stylesheet" />
    <link href="/dist/css/tabler-vendors.min.css?1674944402" rel="stylesheet" />
    <link href="/dist/css/demo.min.css?1674944402" rel="stylesheet" />
    <script src="/dist/js/demo-theme.min.js?1674944402" defer></script>

</head>

<body class=" d-flex flex-column">
    <script src="./dist/js/demo-theme.min.js?1674944402"></script>
    <div class="page page-center">
        <div class="container container-tight py-4">
            <div class="text-center mb-4">
                <a href="/" class="navbar-brand navbar-brand-autodark"><img src="./static/logo.svg" height="36" alt=""></a>
            </div>
            <div class="card card-md">
                <div class="card-body">
                    <h2 class="h2 text-center mb-4">Giriş Yap</h2>
                        <form asp-action="login" asp-controller="account" method="post">
                        <div class="mb-3">
                            <label class="form-label">Mail adresiniz</label>
                            <input type="email" required name="email" class="form-control" placeholder="your@email.com">
                        </div>
                        <div class="mb-2">
                            <label class="form-label">
                                Şifreniz
                                <span class="form-label-description">
                                    <a href="/account/resetpassword">Şifremi Unuttum</a>
                                </span>
                            </label>
                            <div class="input-group input-group-flat">
                                <input type="password" required minlength="3" maxlength="50" name="password" class="form-control" placeholder="Şifreniz">
                               
                            </div>
                        </div>
                  
                        <div class="form-footer">
                            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                        </div>
                        <br />
                        <p>@ViewBag.Login</p>
                       
                        </form>
                </div>

            </div>
            <div class="text-center text-muted mt-3">
                Hesabınız yok mu? <a href="/account/register" tabindex="-1" >Kayıt ol</a>
            </div>
        </div>
    </div>
    <!-- Libs JS -->
    <!-- Tabler Core -->
    <script src="./dist/js/tabler.min.js?1674944402" defer></script>
    <script src="./dist/js/demo.min.js?1674944402" defer></script>
</body>