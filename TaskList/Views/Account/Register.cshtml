@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>İş Takip Sistemi</title>
    <!-- CSS files -->
    <link href="/dist/css/tabler.min.css?1674944402" rel="stylesheet" />
    <link href="/dist/css/tabler-flags.min.css?1674944402" rel="stylesheet" />
    <link href="/dist/css/tabler-payments.min.css?1674944402" rel="stylesheet" />
    <link href="/dist/css/tabler-vendors.min.css?1674944402" rel="stylesheet" />
    <link href="/dist/css/demo.min.css?1674944402" rel="stylesheet" />
    <script src="/dist/js/demo-theme.min.js?1674944402" defer></script>

</head>


<body class=" d-flex flex-column">
    <script src="./dist/js/demo-theme.min.js?1674944402"></script>
    <div class="page page-center">
        <div class="container container-tight py-4">
            <div class="text-center mb-4">
                <a href="." class="navbar-brand navbar-brand-autodark"><img src="./static/logo.svg" height="36" alt=""></a>
            </div>
            <form class="card card-md" action="./" method="get" autocomplete="off" novalidate>
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Kayıt Ol</h2>
                    <div class="mb-3">
                        <label class="form-label">Adınız ve Soyadınız</label>
                        <input type="text" class="form-control" placeholder="Adınızı ve soyadınızı giriniz">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mail Adresiniz</label>
                        <input type="email" class="form-control" placeholder="Mail adresinizi giriniz">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Şifreniz</label>
                        <div class="input-group input-group-flat">
                            <input type="password" class="form-control" placeholder="Şifrenizi giriniz" autocomplete="off">
                            <span class="input-group-text">
                                <a href="#" class="link-secondary" title="Show password" data-bs-toggle="tooltip">
                                    <!-- Download SVG icon from http://tabler-icons.io/i/eye -->
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 12m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" /><path d="M22 12c-2.667 4.667 -6 7 -10 7s-7.333 -2.333 -10 -7c2.667 -4.667 6 -7 10 -7s7.333 2.333 10 7" /></svg>
                                </a>
                            </span>
                        </div>
                    </div>
                    
                    <div class="form-footer">
                        <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
                    </div>
                    <div class="form-footer">
                        <a href="/"  class="btn btn-primary w-100">Anasayfaya Dön</a>
                    </div>
                </div>
            </form>
            <div class="text-center text-muted mt-3">
                Zaten hesabınız var mı? <a href="/account/login" tabindex="-1">Giriş Yap</a>
            </div>
        </div>
    </div>
    <!-- Libs JS -->
    <!-- Tabler Core -->
    <script src="./dist/js/tabler.min.js?1674944402" defer></script>
    <script src="./dist/js/demo.min.js?1674944402" defer></script>
</body>