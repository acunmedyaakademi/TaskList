<div class="container">
    <div class="row">
        <div class="col-md-11" style="margin:auto">
            <form action="https://httpbin.org/post" method="post" class="card">
                <div class="card-header">
                    <h4 class="card-title">Görev Güncelle</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-11">
                            <div class="row">
                                <div class="col-md-11">
                                    <div class="mb-3">
                                        <label class="form-label">Görev <span class="form-label-description">56/100</span></label>
                                        <textarea class="form-control" name="example-textarea-input" rows="6" placeholder="Görev detayı"></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-label">Görev Durumu</div>
                                        <select class="form-select">
                                            <option value="1">Tamamlandı</option>
                                            <option value="2">Devam Ediyor</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-label">Görevi Devret</div>
