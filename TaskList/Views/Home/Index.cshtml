@using TaskList.Models.ViewModels;
@model DashboardContainer
<div class="container">
    <div class="row">
        <div class="col-md-11" style="margin:auto; display:flex">

            <div class="col-md-3" style="flex:2">
                <div class="card">
                    <div class="card-header border-0">
                        <div class="card-title">Raporlar</div>
                    </div>


                    <div class="card-table table-responsive">
                        <table class="table table-vcenter">
                            <thead>
                                <tr>
                                    <th>Kullanıcı</th>
                                    <th>Rapor</th>

                                </tr>
                            </thead>
                            @if (Model.Reports != null)
                                @foreach (var item in Model.Reports)
                                {
                                    <tr>
                                        <td class="w-100">
                                            <p @*todo buraya a at*@ class="text-reset">@item.Name</p>
                                        </td>

                                        <td class="text-nowrap">
                                            <a href="#" class="text-muted">
                                                <!-- Download SVG icon from http://tabler-icons.io/i/check -->
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M5 12l5 5l10 -10" /></svg>
                                                @item.Done/@(item.Undone + item.Done)
                                            </a>
                                        </td>
                                    </tr>
                                }

                        </table>
                    </div>
                </div>
            </div>
            <div class="col-1">
            </div>

            <div class="col-md-3" style="flex:2">
                <div class="card">


                    <div class="card-header border-0">
                        <div class="card-title">Görevlerim</div>
                    </div>


                    <div class="card-table table-responsive">
                        <table class="table table-vcenter">
                            <thead>
                                <tr>
                                    <th>Görevi Atayan</th>
                                    <th>Görev</th>
                                    <th>Tarih</th>
                                    <th>Yorum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.UserTasks != null)
                                    @foreach (var item in Model.UserTasks)
                                    {
                                        <tr>
                                            <td class="text-nowrap text-muted">
                                                <div class="text-truncate">
                                                    @item.AssingerName
                                                </div>
                                            </td>
                                            <td class="td-truncate">
                                                <div class="text-truncate">
                                                    <a href="/task/taskdetail?id=@item.Id">@item.TaskName</a>
                                                </div>
                                            </td>
                                            <td class="text-nowrap text-muted">@item.UpdatedOn</td>
                                            @if (!item.IsDone)
                                            {
                                                <td class="text-nowrap">
                                                    <a href="/task/donetask?id=@item.Id" class="btn btn-primary" target="" rel="noreferrer">
                                                        Bitir
                                                    </a>
                                                </td>
                                            }
                                            else
                                            {
                                                <td class="text-nowrap">
                                                    <a href="/task/undonetask?id=@item.Id" class="btn btn-danger" target="" rel="noreferrer">
                                                        Geri Al
                                                    </a>
                                                </td>
                                            }

                                        </tr>
                                    }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <br />
        <div class="col-md-11" style="margin:auto; margin-top:5vh;">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Tüm Görevler</h3>
                </div>
                <div class="table-responsive">
                    <table class="table card-table table-vcenter text-nowrap datatable">
                        <thead>
                            <tr>

                                <th>Görevi Atayan</th>
                                <th>Görev Atanan</th>
                                <th>Görev</th>
                                <th>Tarih</th>
                                <th></th>
                                <th>Durum</th>
                                <th></th>
                                <th>Yorumlar</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.AllTasks != null)
                                @foreach (var item in Model.AllTasks)
                                {
                                    <tr>

                                        <td><p class="text-reset" tabindex="-1">@item.AssingerName</p></td>

                                        <td>
                                            <span class="flag flag-country-tr"></span>
                                            @item.AssignedByName
                                        </td>

                                        <td>
                                            <a href="/task/TaskDetail?id=@item.Id" class="text-reset" tabindex="-1">@item.TaskName</a>
                                        </td>

                                        <td>
                                            @item.UpdatedOn
                                        </td>

                                        <td>
                                            @if (item.IsDone)
                                            {
                                            <td>
                                                <span class="badge bg-success me-1"></span> Tamamlandı
                                            </td>

                                            }
                                            else
                                            {
                                            <td>
                                                <span class="badge bg-danger me-1"></span> Tamamlanmadı
                                            </td>
                                            }

                                        </td>
                                        <td></td>
                                        <td class="text-nowrap">
                                            <a href="#" class="text-muted">
                                                <!-- Download SVG icon from http://tabler-icons.io/i/message -->
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M4 21v-13a3 3 0 0 1 3 -3h10a3 3 0 0 1 3 3v6a3 3 0 0 1 -3 3h-9l-4 4" /><path d="M8 9l8 0" /><path d="M8 13l6 0" /></svg>
                                                3
                                            </a>
                                        </td>
                                    </tr>
                                }


                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <br />

    </div>
</div>